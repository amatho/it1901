<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TableColumn?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>

<AnchorPane prefHeight="600.0" prefWidth="800.0" xmlns="http://javafx.com/javafx/11.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="gui.ScoreCardController">
   <children>
      <Label layoutX="14.0" layoutY="14.0" text="Create your scorecard">
         <font>
            <Font name="System Bold Italic" size="24.0" />
         </font>
      </Label>
      <HBox layoutY="174.0" prefHeight="426.0" prefWidth="800.0">
         <children>
            <VBox prefHeight="426.0" prefWidth="400.0">
               <children>
                  <TableView fx:id="tableView" prefHeight="354.0" prefWidth="400.0">
                    <columns>
                      <TableColumn fx:id="usernameColumn" prefWidth="200.0" text="Player" />
                        <TableColumn fx:id="userIDColumn" prefWidth="199.0" text="User ID" />
                    </columns>
                  </TableView>
                  <AnchorPane prefHeight="200.0" prefWidth="200.0">
                     <children>
                        <TextField fx:id="usernameField" layoutX="34.0" layoutY="61.0" />
                        <Button fx:id="addButton" layoutX="200.0" layoutY="61.0" mnemonicParsing="false" onAction="#newUserButtonPushed" text="Add Player" />
                        <Button fx:id="deleteButton" layoutX="287.0" layoutY="61.0" mnemonicParsing="false" onAction="#deleteUserButtonPushed" text="Delete Player(s)" />
                     </children>
                  </AnchorPane>
               </children></VBox>
            <VBox prefHeight="226.0" prefWidth="200.0" />
            <VBox prefHeight="226.0" prefWidth="200.0">
               <children>
                  <AnchorPane prefHeight="427.0" prefWidth="150.0">
                     <children>
                        <Button fx:id="createButton" layoutX="78.0" layoutY="388.0" mnemonicParsing="false" onAction="#changeSceneButtonPushed" text="Create ScoreCard" />
                     </children>
                  </AnchorPane>
               </children>
            </VBox>
         </children>
      </HBox>
   </children>
</AnchorPane>
