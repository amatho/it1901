      </columns>
    </TableView>
    <Label layoutX="73.0" layoutY="84.0" text="Scorecard History:">
      <font>
        <Font name="System Bold" size="19.0" />
      </font>
    </Label>
    <Button fx:id="cancelSelectedBooking" layoutX="418.0" layoutY="518.0" mnemonicParsing="false" onAction="#handleCancelSelectedBooking" prefHeight="27.0" prefWidth="184.0" text="Cancel selected booking" />
    <Button fx:id="addBooking" layoutX="606.0" layoutY="518.0" mnemonicParsing="false" onAction="#handleAddBooking" prefHeight="27.0" prefWidth="138.0" text="Add booking" />
      <Label fx:id="email" alignment="CENTER" layoutX="275.0" layoutY="51.0" prefHeight="24.0" prefWidth="251.0" text="email" textAlignment="CENTER">
