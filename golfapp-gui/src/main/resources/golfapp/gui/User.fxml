<AnchorPane prefHeight="600.0" prefWidth="800.0" xmlns="http://javafx.com/javafx/11.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="golfapp.gui.UserController">
  <children>
    <Label fx:id="username" alignment="CENTER" layoutX="259.0" layoutY="7.0" prefHeight="44.0" prefWidth="283.0" text="Username" textAlignment="CENTER">
      <font>
        <Font name="System Bold" size="36.0" />
      </font>
    </Label>
    <Label layoutX="428.0" layoutY="84.0" text="Booked times:">
      <font>
        <Font name="System Bold" size="19.0" />
      </font>
    </Label>
    <Button fx:id="viewSelectedScorecard" layoutX="58.0" layoutY="518.0" mnemonicParsing="false" onAction="#handleViewSelectedScorecardButton" prefHeight="27.0" prefWidth="184.0" text="View selected scorecard" />
    <Button fx:id="logOut" layoutX="714.0" layoutY="15.0" mnemonicParsing="false" onAction="#handleLogOutButton" prefHeight="27.0" prefWidth="72.0" text="Log out" />
    <TableView fx:id="scorecardTableView" layoutX="58.0" layoutY="122.0" prefHeight="390.0" prefWidth="326.0">
