      <TextField fx:id="usernameField" layoutX="342.0" layoutY="551.0" />
      <Button fx:id="addUserButton" layoutX="251.0" layoutY="518.0" mnemonicParsing="false" onAction="#handleAddUserButton" prefHeight="27.0" prefWidth="74.0" text="Add User" />
      <ChoiceBox fx:id="userChoiceBox" layoutX="342.0" layoutY="518.0" prefHeight="27.0" prefWidth="161.0" />
   </children>
</AnchorPane>
