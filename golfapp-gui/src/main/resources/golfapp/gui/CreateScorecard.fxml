<AnchorPane prefHeight="600.0" prefWidth="800.0" xmlns="http://javafx.com/javafx/11.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="golfapp.gui.CreateScorecardController">
   <children>
      <Button fx:id="addGuestButton" layoutX="251.0" layoutY="551.0" mnemonicParsing="false" onAction="#handleAddGuestButton" text="Add guest" />
      <Label layoutX="216.0" layoutY="58.0" text="Create your scorecard">
         <font>
            <Font name="System Bold" size="36.0" />
         </font>
      </Label>
      <ChoiceBox fx:id="courseChoiceBox" layoutX="14.0" layoutY="131.0" prefWidth="150.0" />
      <TableView fx:id="tableView" layoutX="183.0" layoutY="131.0" prefHeight="296.0" prefWidth="400.0">
        <columns>
          <TableColumn fx:id="usernameColumn" prefWidth="200.0" text="Player" />
            <TableColumn fx:id="emailColumn" prefWidth="199.0" text="e-mail" />
        </columns>
      </TableView>
      <Label layoutX="14.0" layoutY="114.0" text="Course:" />
      <Button fx:id="createButton" layoutX="512.0" layoutY="478.0" mnemonicParsing="false" onAction="#changeSceneButtonPushed" prefHeight="27.0" prefWidth="141.0" text="Create" />
